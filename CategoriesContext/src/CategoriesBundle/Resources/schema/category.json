{
    "title": "category",
    "properties": {
        "id": {
            "required": false,
            "type": "string",
            "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
        },
        "isVisible": {
            "required": true,
            "type": "boolean"
        },
        "parentCategory": {
            "required": true,
            "type": "string",
            "pattern": "(^$)|(^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$)"
        },
        "slug": {
            "required": true,
            "type": "string",
            "minLength": "1",
            "maxLength": "40",
            "pattern": "(^([0-9a-zA-Z]|[-]){1,40}$)"
        },
        "name": {
            "required": true,
            "type": "string",
            "minLength": "1"
        }
    }
}